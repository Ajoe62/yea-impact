NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=YOUR_SUPABASE_PUBLIC_KEY

# Base URL of your deployed Next.js app (used for generating QR code URLs). On Vercel this
# will be something like https://your-app.vercel.app
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Use service-role key only on the server (e.g. in edge functions) and never expose it to the client
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY